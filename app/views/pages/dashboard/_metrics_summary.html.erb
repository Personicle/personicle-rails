            <span class="h2 font-weight-bold mb-0"><%=steps_text%></span>
          </div>
          <div class="col-auto">
            <div class="icon icon-shape bg-gradient-green text-white rounded-circle shadow">
              <i class="ni ni-money-coins"></i>
            </div>
          </div>
        </div>
        <p class="mt-3 mb-0 text-sm">
          <%if avg_steps_month > avg_steps_week%>
          <%steps_percent_change = (avg_steps_month>0)? 100*(avg_steps_month - avg_steps_week)/avg_steps_month: 0%>
